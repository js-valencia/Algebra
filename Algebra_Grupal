      "source": [
        "print(\"\\n--- Solution Details ---\")\n",
        "\n",
        "# Step 1: Print the calculated determinants\n",
        "print(f\"\\nCalculated Determinants:\")\n",
        "print(f\"Determinant of the main coefficient matrix (det_main): {det_main}\")\n",
        "print(f\"Determinant for x (det_x): {det_x}\")\n",
        "print(f\"Determinant for y (det_y): {det_y}\")\n",
        "print(f\"Determinant for z (det_z): {det_z}\")\n",
        "\n",
        "# Step 2: Print a step-by-step explanation of the solution using Cramer's rule\n",
        "print(\"\\nStep-by-step solution using Cramer's Rule:\")\n",
        "print(\"Cramer's rule states that for a system of linear equations, the value of each variable is found by dividing the determinant of the matrix where that variable's coefficient column is replaced by the constant terms (d1, d2, d3) by the determinant of the main coefficient matrix.\")\n",
        "\n",
        "if det_main == 0:\n",
        "    print(\"\\nSince the main determinant is 0, the system has no unique solution and Cramer's rule cannot be applied.\")\n",
        "else:\n",
        "    print(f\"\\nTo find x: x = det_x / det_main = {det_x} / {det_main}\")\n",
        "    print(f\"To find y: y = det_y / det_main = {det_y} / {det_main}\")\n",
        "    print(f\"To find z: z = det_z / det_main = {det_z} / {det_main}\")\n",
        "\n",
        "# Step 3: Print the final calculated values of x, y, and z\n",
        "print(\"\\nFinal Solution:\")\n",
        "print(f\"x = {x}\")\n",
        "print(f\"y = {y}\")\n",
        "print(f\"z = {z}\")\n",
        "\n",
        "print(f\"\\nSolution for {name} (ID: {id_number}):\")\n",
        "print(f\"x = {x}\")\n",
        "print(f\"y = {y}\")\n",
        "print(f\"z = {z}\")"
      ],
      "execution_count": 5,
